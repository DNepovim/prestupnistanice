---
import { tp } from '../utils/tp'

interface Props {
  text: string
}

const { text } = Astro.props
---

<blockquote class="font-alt text-brand-first-500 mb-4 pl-2 text-2xl italic">
  <span
    style="-webkit-text-stroke-width: 1px; -webkit-text-stroke-color: var(--color-brand-first-500);"
    class="text-stroke-brand-first-500 text-brand-second-100 float-left mr-4 text-[2.6em] leading-[1em] font-bold"
    >{text.slice(0, 1)}</span
  >{tp(text.slice(1))}
</blockquote>
