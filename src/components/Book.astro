---
import { Image } from "astro:assets";

interface Props {
  title: string;
  link: string;
  image?: string;
  color?: string;
  authors?: {
    firstname: string;
    surname: string;
    link: string;
  }[];
}

const { title, link, image, color, authors } = Astro.props;
---

<article class="min-md:mb-12 flex flex-col gap-4 justify-end">
  {
    image && (
      <Image
        alt={title}
        src={image}
        width={157.5}
        height={225}
        class="shadow-2xl border border-gray-200"
      />
    )
  }

  <div class="min-h-30">
    <h2 class="font-head text-2xl" style={{ color: color ?? "black" }}>
      <a href={link}>{title}</a>
    </h2>
    <p>
      {
        authors?.map((a, index) => (
          <span class="whitespace-nowrap">
            {index !== 0 ? ", " : ""}
            <a
              class="group text-gray-500 hover:text-black transition-colors font-alt"
              href={`/autori/${a.link}`}
            >
              {a.firstname} {a.surname}
            </a>
          </span>
        ))
      }
    </p>
  </div>
</article>
