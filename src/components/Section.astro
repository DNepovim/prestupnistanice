---
import { cn } from '../utils/cn'

type Props = {
  title?: string
  link?: string
  isWide?: boolean
  isFull?: boolean
  className?: string
}

const { title, link, isWide, isFull, className } = Astro.props
---

<section
  class={cn(
    'mx-auto mb-12',
    isWide ? 'max-w-[70rem]' : isFull ? 'max-w-full' : 'max-w-[56rem]',
    className,
  )}
>
  {
    title && (
      <h2 class={cn('mb-8 text-xl text-gray-500')}>
        {link ? (
          <a
            class:list={[
              className,
              'font-alt group text-brand-first-500 relative text-md tracking-wider',
            ]}
            href={link}
          >
            {title}
            <span class="border-brand-first-500 absolute -right-7 bottom-1/2 block size-2 translate-y-1/2 rotate-45 border-t border-r" />
            <span class="bg-brand-first-500 absolute -right-[29px] bottom-1/2 block h-[1px] w-4 translate-y-1/2 transition-all duration-500 group-hover:w-[calc(100%+2rem)]" />
          </a>
        ) : (
          title
        )}
      </h2>
    )
  }

  <slot />
</section>
