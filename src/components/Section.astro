---
import { cn } from '../utils/cn'

interface Props {
  title?: string
  isWide?: boolean
  isFull?: boolean
  className?: string
}

const { title, isWide, isFull, className } = Astro.props
---

<section
  class={cn(
    'mx-auto mb-12',
    isWide ? 'max-w-[80rem]' : isFull ? 'max-w-full' : 'max-w-[56rem]',
    className,
  )}
>
  {
    title && (
      <h2 class={cn('font-alt text-brand-first-500 mb-8 text-2xl')}>
        <span class="relative">
          {title}
          <span class="animate-width-expand from-brand-second-500 group-hover:bg-brand-second-500 absolute bottom-0 left-0 h-[2px] w-full bg-gradient-to-r to-transparent" />
        </span>
      </h2>
    )
  }

  <slot />
</section>
